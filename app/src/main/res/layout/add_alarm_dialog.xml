<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:orientation="vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/add_alarm_alarm_name" android:hint="Alarm name"/>
    <TimePicker
            android:id="@+id/add_alarm_timepicker"
            android:layout_width="match_parent"
            android:layout_height="348dp">

    </TimePicker>
    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/add_alarm_repeat_layout">

        <TextView
                android:text="Mon"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textStyle="bold" android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
                android:text="Tue"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/textView2"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:textStyle="bold" android:gravity="center"
                app:layout_constraintEnd_toStartOf="@+id/textView4" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
        />
        <TextView
                android:text="Wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/textView3"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:gravity="center"
                app:layout_constraintEnd_toStartOf="@+id/textView5" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
        />
        <TextView
                android:text="Thu"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/textView4"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:gravity="center"
                app:layout_constraintEnd_toStartOf="@+id/textView6" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
        />
        <TextView
                android:text="Fri"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/textView5"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:textStyle="bold" android:gravity="center"
                app:layout_constraintEnd_toStartOf="@+id/textView7" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
        />
        <TextView
                android:text="Sat"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textStyle="bold"
                android:gravity="center" app:layout_constraintStart_toEndOf="@+id/textView6"
                android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
                app:layout_constraintEnd_toStartOf="@+id/textView8" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
                android:text="Sun"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textView7"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textStyle="bold"
                android:gravity="center" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
        />
        <CheckBox
                android:text="CheckBox"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_alarm_check_1" android:visibility="visible"
                tools:text="@null" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" app:layout_constraintEnd_toStartOf="@+id/add_alarm_check_2"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
                android:text="CheckBox"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_alarm_check_2" tools:text="@null"
                app:layout_constraintStart_toEndOf="@+id/add_alarm_check_1"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toStartOf="@+id/add_alarm_check_3"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
                android:text="@null"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_alarm_check_3" app:layout_constraintStart_toEndOf="@+id/add_alarm_check_2"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintEnd_toStartOf="@+id/add_alarm_check_4"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
                android:text="@null"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_alarm_check_4" app:layout_constraintStart_toEndOf="@+id/add_alarm_check_3"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintEnd_toStartOf="@+id/add_alarm_check_5" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
                android:text="@null"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_alarm_check_5" app:layout_constraintStart_toEndOf="@+id/add_alarm_check_4"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintEnd_toStartOf="@+id/add_alarm_check_6"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
                android:text="@null"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_alarm_check_6" app:layout_constraintStart_toEndOf="@+id/add_alarm_check_5"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toStartOf="@+id/add_alarm_check_7"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
                android:text="@null"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_alarm_check_7" app:layout_constraintStart_toEndOf="@+id/add_alarm_check_6"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>


</LinearLayout>